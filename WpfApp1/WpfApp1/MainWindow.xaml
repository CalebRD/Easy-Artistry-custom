<Window x:Class="YourApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Generator"
        Width="1000" Height="600"
        Background="#1A1A1A"
        FontFamily="Times New Roman"
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <!-- Chat Panel -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ChatPanel" />
            </ScrollViewer>

            <DockPanel Grid.Row="1" Margin="0,10,0,0">
                <TextBox x:Name="ChatInput"
                         Background="#2A2A2A"
                         Foreground="White"
                         BorderBrush="#3A3A3A"
                         FontSize="14"
                         Margin="0,0,10,0"
                         Padding="5"
                         AcceptsReturn="False"
                         VerticalAlignment="Center"
                         KeyDown="ChatInput_KeyDown"
                         DockPanel.Dock="Left"
                         Width="Auto"
                         HorizontalAlignment="Stretch"/>
            </DockPanel>
        </Grid>

        <!-- Image Viewer Panel -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Background="#2A2A2A" BorderBrush="#3A3A3A" BorderThickness="1" Padding="10">
                <Image x:Name="GeneratedImage" Stretch="Uniform" />
            </Border>

            <Button Grid.Row="1"
                    Content="Generate"
                    Margin="0,5,0,5"
                    Padding="10"
                    FontSize="16"
                    Background="#3A9FF0"
                    Foreground="White"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Click="GenerateButton_Click" Width="471"/>

            <Button Grid.Row="2"
                    Content="Save"
                    Margin="0,10,0,0"
                    Padding="10"
                    FontSize="16"
                    Background="#4A4A4A"
                    Foreground="White"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Click="SaveButton_Click" Width="299"/>
        </Grid>
    </Grid>
</Window>
