<Window x:Class="YourApp.Primary_Image_Generation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Primary Image Generation" Height="1000" Width="1400"
        Background="LightGray">

    <Grid Margin="10">

        <Border CornerRadius="37" BorderBrush="Gray" BorderThickness="4" Background="White"
                Width="987" Height="555" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="32,29,0,0">
            <Image x:Name="GeneratedImage" Stretch="Uniform"/>
        </Border>

        <Border CornerRadius="37" Background="LightBlue" Width="706" Height="220"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="32,608,0,0">
            <Grid Margin="20">
                <TextBlock Text="Image Prompt" FontSize="16" Margin="0,0,0,140" Foreground="Black"/>
                <TextBox x:Name="ChatInput" VerticalAlignment="Bottom" Height="80" FontSize="16" Text="Type Prompt Here..."
                Foreground="Gray"
                GotFocus="ChatInput_GotFocus"
                LostFocus="ChatInput_LostFocus"/>
            </Grid>
        </Border>

        <Button x:Name="GenerateButton" Content="Generate" FontSize="20" FontWeight="Bold"
                Background="LightBlue" Foreground="Black" BorderBrush="Gray" BorderThickness="0"
                Width="257" Height="80"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="762,608,0,0"/>

        <Button x:Name="SaveButton" Content="Save Image" FontSize="20" FontWeight="Bold"
                Background="LightBlue" Foreground="Black" BorderBrush="Gray" BorderThickness="0"
                Width="257" Height="80"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="762,748,0,0"/>

        <Border CornerRadius="71" BorderBrush="Black" BorderThickness="4" Background="Transparent"
                Width="1051" Height="951" HorizontalAlignment="Left" VerticalAlignment="Top"
                IsHitTestVisible="False"/>
        
    </Grid>
</Window>
